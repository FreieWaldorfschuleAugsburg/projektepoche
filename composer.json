{
  "name": "freiewaldorfschuleaugsburg/projektepoche",
  "type": "projektepoche",
  "description": "A tool for managing the votes of the projektepoche",
  "homepage": "https://projektepoche.waldorf-augsburg.de",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "codeigniter4/framework": "^4",
    "ext-intl": "*",
    "ext-mbstring": "*",
    "chillerlan/php-qrcode": "^5.0",
    "ext-openssl": "*",
    "ext-zip": "*"
  },
  "require-dev": {
    "fakerphp/faker": "^1.9",
    "mikey179/vfsstream": "^1.6",
    "phpunit/phpunit": "^10.0"
  },
  "suggest": {
    "ext-fileinfo": "Improves mime type detection for files"
  },
  "autoload": {
    "psr-4": {
    },
    "exclude-from-classmap": [
      "**/Database/Migrations/**"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
